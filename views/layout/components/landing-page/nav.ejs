<header class="p-4 m-1">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand ms-1" href="/">Home</a>
            <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="offcanvas"
                data-bs-target="#offcanvasDarkNavbar"
                aria-controls="offcanvasDarkNavbar"
            >
                <span class="navbar-toggler-icon"></span>
            </button>
            <div
                class="offcanvas offcanvas-end text-bg-dark"
                tabindex="-1"
                id="offcanvasDarkNavbar"
                aria-labelledby="offcanvasDarkNavbarLabel"
            >
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">
                        Home
                    </h5>
                    <button
                        type="button"
                        class="btn-close btn-close-white"
                        data-bs-dismiss="offcanvas"
                        aria-label="Close"
                    ></button>
                </div>
                <div class="offcanvas-body">
                    <% if (user.username !== undefined) { %>
                    <ul class="navbar-nav justify-content-end align-items-center gap-2 flex-grow-1 ms-auto ms-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/item">Items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/cart"><i class="bi-cart-fill text-white fs-5"></i></a>
                        </li>
                        <div><hr class="w-100"></div>
                        <div class="vr h-75 my-auto me-2"></div>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-person-circle fs-5 me-1"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#!">Settings</a></li>
                                <li><a class="dropdown-item" href="#!">Activity Log</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <!-- Button trigger modal -->
                                    <button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#logout">
                                        Logout
                                    </button>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <% } else { %>
                    <ul class="navbar-nav justify-content-end flex-grow-1 me-1">
                        <li class="nav-item">
                            <a class="nav-link" href="/item">Items</a>
                        </li>
                        <div><hr></div>
                        <div class="vr h-75 my-auto mx-3"></div>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                    </ul>
                    <% }  %>
                </div>
            </div>
        </div>
    </nav>
    <!-- Modal -->
    <div
        class="modal modal-sm fade"
        id="logout"
        data-bs-backdrop="static"
        data-bs-keyboard="false"
        tabindex="-1"
        aria-labelledby="logoutLabel"
        aria-hidden="true"
    >
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content px-3">
                <div class="modal-header justify-content-center px-0">
                    <h1 class="modal-title" id="logoutLabel">
                        Logout
                    </h1>
                </div>
                <div class="modal-body px-0 text-center">
                    <p class="fs-5">Are you sure you want to exit?</p>
                </div>
                <div class="modal-footer justify-content-center gap-1 border-0 px-0 pt-0">
                    <button type="button" class="col btn btn-outline-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="col btn btn-danger" onclick="window.location='/logout';">
                        Confirm
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>
